	<script>
		(function(){
			const now = new Date();
			const month = now.getMonth(); // 0 = Jan
			const day = now.getDate();

			if(month === 0){
				const nums = Array.from(document.querySelectorAll('.date-num'));
				for(const el of nums){
					if(parseInt(el.textContent,10) === day){
						const td = el.closest('td');
						if(td){
							td.classList.add('today');
							td.setAttribute('aria-current','date');
							td.setAttribute('title','Today');
						}
						break;
					}
				}
			}
			const demoDate = 14;
			const demoEl = Array.from(document.querySelectorAll('.date-num')).find(x => parseInt(x.textContent,10) === demoDate);
			if(demoEl){
				const dot = document.createElement('span');
				dot.className = 'event';
				demoEl.closest('td').appendChild(dot);
				demoEl.closest('td').setAttribute('aria-label','Event on 14');
			}
		})();
	</script>
